<main class="container">

    {{#each seriesList}}

        <div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-white">

            <a
                href="#collapse{{@index}}"
                class="searchable d-flex align-items-center flex-shrink-0 p-3 link-dark text-decoration-none border-bottom"
                data-bs-toggle="collapse"
                role="button"
                data-search-name="{{@key}}"
                data-search-link="#collapse-search-{{@index}}"
                id="collapse-search-{{@index}}"
                aria-expanded="false"
                aria-controls="collapse{{@index}}"
            >
                <span class="fs-5 fw-semibold">{{@key}} <small>({{this.length}})</small></span>
            </a>

            <div
                id="collapse{{@index}}"
                class="collapse list-group list-group-flush border-bottom scrollarea"
            >

                {{#each this}}

                    <a href="/link/" class="list-group-item list-group-item-action py-3 lh-tight">
                        <div class="d-flex w-100 align-items-center justify-content-between">
                            <strong class="mb-1">Source: {{this.linkPath}}</strong>
                            <small>{{this.createdAt}}</small>
                        </div>
                        <div class="col-10 mb-1 small">Target:
                            {{this.sourcePath}}<br />
                            <pre>{{json this.metaData}}</pre><br />
                        </div>
                    </a>
                {{/each}}

            </div>
        </div>

    {{/each}}
</main>